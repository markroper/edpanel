<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- liquibase best practice is to use different changelogs for different versions -->
    
    <!-- included files must be off project root -->
    <include file="database/liquibase/db.changelog-1.0.xml"/>
    
    <!-- future versions can be defined here, like this:
    <include file="database/liquibase/db.changelog-1.1.xml"/>
    <include file="database/liquibase/db.changelog-2.0.xml"/>
    -->
</databaseChangeLog>