<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                     http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean
            class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
            p:searchSystemEnvironment="true"
            p:ignoreResourceNotFound="true"
            p:systemPropertiesModeName="SYSTEM_PROPERTIES_MODE_OVERRIDE"
            p:ignoreUnresolvablePlaceholders="true">
        <property name="location">
            <value>classpath:kickboard.properties</value>
        </property>
    </bean>

    <!-- Initialization for data source -->
    <bean id="kickboardClient"
          class="com.scholarscore.etl.kickboard.KickboardClient">
        <constructor-arg index="0" type="java.net.URI" value="${kickboard.client.behavior.url}"/>
        <constructor-arg index="1" type="java.net.URI" value="${kickboard.client.pointbank.url}"/>
        <constructor-arg index="2" type="java.net.URI" value="${kickboard.client.consequense.url}"/>
    </bean>

</beans>