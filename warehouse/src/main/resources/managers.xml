<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                     http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="PM"
          class="com.scholarscore.api.manager.OrchestrationManager">
        <property name="schoolManager" ref="schoolManager"/>
        <property name="schoolYearManager" ref="schoolYearManager"/>
        <property name="termManager" ref="termManager"/>
        <property name="studentManager" ref="studentManager"/>
        <property name="sectionManager" ref="sectionManager"/>
        <property name="courseManager" ref="courseManager"/>
        <property name="assignmentManager" ref="assignmentManager"/>
        <property name="studentAssignmentManager" ref="studentAssignmentManager"/>
        <property name="studentSectionGradeManager" ref="studentSectionGradeManager"/>
        <property name="teacherManager" ref="teacherManager"/>
        <property name="userManager" ref="userManager"/>
        <property name="queryManager" ref="queryManager"/>
        <property name="behaviorManager" ref="behaviorManager"/>
        <property name="goalManager" ref="goalManager"/>
        <property name="schoolDayManager" ref="schoolDayManager"/>
        <property name="attendanceManager" ref="attendanceManager"/>
        <property name="uiAttributesManager" ref="uiAttributesManager"/>
        <property name="adminManager" ref="adminManager"/>
        <property name="gpaManager" ref="gpaManager"/>
        <property name="surveyManager" ref="surveyManager"/>
        <property name="notificationManager" ref="notificationManager"/>
        <property name="messageManager" ref="messageManager"/>
    </bean>

    <bean id="adminManager"
          class="com.scholarscore.api.manager.AdminManagerImpl">
           <property name="administratorPersistence" ref="administratorPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="goalManager"
          class="com.scholarscore.api.manager.GoalManagerImpl">
        <property name="goalPersistence" ref="goalPersistence"/>
        <property name="pm" ref="PM"/>
        <property name="studentAssignmentPersistence" ref="studentAssignmentPersistence"/>
        <property name="studentSectionGradePersistence" ref="studentSectionGradePersistence"/>
    </bean>

    <bean id="assignmentManager"
          class="com.scholarscore.api.manager.AssignmentManagerImpl">
           <property name="assignmentPersistence" ref="assignmentPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="surveyManager"
          class="com.scholarscore.api.manager.SurveyManagerImpl">
        <property name="surveyPersistence" ref="surveyPersistence"/>
        <property name="pm" ref="PM"/>
    </bean>

    <bean id="messageManager"
          class="com.scholarscore.api.manager.MessageManagerImpl">
        <property name="messagePersistence" ref="messagePersistence"/>
        <property name="pm" ref="PM"/>
    </bean>

    <bean id="notificationManager"
          class="com.scholarscore.api.manager.NotificationManagerImpl">
        <property name="notificationPersistence" ref="notificationPersistence"/>
        <property name="pm" ref="PM"/>
    </bean>

    <bean id="behaviorManager"
          class="com.scholarscore.api.manager.BehaviorManagerImpl">
           <property name="behaviorPersistence" ref="behaviorPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="courseManager"
          class="com.scholarscore.api.manager.CourseManagerImpl">
           <property name="coursePersistence" ref="coursePersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="queryManager"
          class="com.scholarscore.api.manager.QueryManagerImpl">
           <property name="queryPersistence" ref="queryPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="schoolManager"
          class="com.scholarscore.api.manager.SchoolManagerImpl">
           <property name="schoolPersistence" ref="schoolPersistence"/>
           <property name="schoolYearPersistence" ref="schoolYearPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="schoolYearManager"
          class="com.scholarscore.api.manager.SchoolYearManagerImpl">
           <property name="schoolYearPersistence" ref="schoolYearPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="sectionManager"
          class="com.scholarscore.api.manager.SectionManagerImpl">
           <property name="sectionPersistence" ref="sectionPersistence"/>
           <property name="studentPersistence" ref="studentPersistence"/>
           <property name="assignmentPersistence" ref="assignmentPersistence"/>
           <property name="studentSectionGradePersistence" ref="studentSectionGradePersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="studentAssignmentManager"
          class="com.scholarscore.api.manager.StudentAssignmentManagerImpl">
           <property name="studentAssignmentPersistence" ref="studentAssignmentPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="studentManager"
          class="com.scholarscore.api.manager.StudentManagerImpl">
           <property name="studentPersistence" ref="studentPersistence"/>
           <property name="studentPrepScorePersistence" ref="studentPrepScorePersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="studentSectionGradeManager"
          class="com.scholarscore.api.manager.StudentSectionGradeManagerImpl">
           <property name="studentSectionGradePersistence" ref="studentSectionGradePersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="teacherManager"
          class="com.scholarscore.api.manager.TeacherManagerImpl">
           <property name="teacherPersistence" ref="teacherPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="termManager"
          class="com.scholarscore.api.manager.TermManagerImpl">
           <property name="termPersistence" ref="termPersistence"/>
           <property name="studentPersistence" ref="studentPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="userManager"
          class="com.scholarscore.api.manager.UserManagerImpl">
           <property name="userPersistence" ref="userPersistence"/>
           <property name="authInfoPersistence" ref="authInfoPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>
    <bean id="schoolDayManager"
          class="com.scholarscore.api.manager.SchoolDayManagerImpl">
           <property name="dayPersistence" ref="schoolDayPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>
    
    <bean id="attendanceManager"
          class="com.scholarscore.api.manager.AttendanceManagerImpl">
           <property name="attendancePersistence" ref="attendancePersistence"/>
           <property name="pm" ref="PM"/>
    </bean>

    <bean id="gpaManager"
          class="com.scholarscore.api.manager.GpaManagerImpl">
        <property name="gpaPersistence" ref="gpaPersistence"/>
        <property name="pm" ref="PM"/>
    </bean>
    
    <bean id="uiAttributesManager"
          class="com.scholarscore.api.manager.UiAttributesManagerImpl">
           <property name="uiAttributesPersistence" ref="uiAttributesPersistence"/>
           <property name="pm" ref="PM"/>
    </bean>
</beans>