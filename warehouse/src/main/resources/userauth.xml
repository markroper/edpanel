<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                     http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:persistence.xml"/>
   
   <bean id="userDetailService"
    	class="com.scholarscore.api.security.config.WarehouseUserDetailService">
    	<constructor-arg index="0" ref="userPersistence"/>
    	<constructor-arg index="1" ref="authorityPersistence"/>
    </bean>
    
    <bean id="oneTimePassAuthProvider"
          class="com.scholarscore.api.security.config.OneTimePassAuthProvider">
        <property name="userPersistence" ref="userPersistence"/>
    </bean>
</beans>